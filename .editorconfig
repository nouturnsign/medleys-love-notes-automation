root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4
insert_final_newline = true
max_line_length = 120

[*.md]
indent_style = space
indent_size = 2
insert_final_newline = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2
insert_final_newline = true
max_line_length = 120

[*.json]
indent_style = space
indent_size = 2
insert_final_newline = true
max_line_length = 120

[.{dockerignore,gitignore}]
end_of_line = unset
